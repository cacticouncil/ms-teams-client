{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dir",
			"type": "shell",
			"command": "mkdir",
			"args": ["-p","output"]
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"*.cpp",
				//"${file}",
				"-o",
				//"${fileDirname}/output/${fileBasenameNoExtension}",
				"${fileDirname}/output/teams-client",
				"$(pkg-config", "--cflags", "--libs", "libsoup-2.4", "glib-2.0)"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++",
			"dependsOn":["dir"]
		}
	]
}